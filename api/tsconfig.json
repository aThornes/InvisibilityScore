{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "baseUrl": "./",
    "paths": {
      "@common/*": ["common/*"],
      "@type/*": ["types/*"]
    }
  }
}
